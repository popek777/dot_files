#!/bin/bash

# simple script used to update dot_files directory 

REPO_DIR="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd)"

rm -rf $REPO_DIR/.vim
rm -rf $REPO_DIR/.vimrc

cp -R $HOME/.vim $REPO_DIR
find $REPO_DIR/.vim -name *.pyc | xargs rm
# YouCompleteMe must be fetched fro github and build, thus addint it to
# repository makes no sense
rm -rf $REPO_DIR/.vim/bundle/YouCompleteMe

cp $HOME/.vimrc $REPO_DIR
cp $HOME/.bashrc-opera $REPO_DIR
